
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<h2>Comments</h2>
<%=  render @article.commments %>




<h2>Add a comement</h2>
<%= form_for([@article,@article.comments.build])  do |f|  %>
	<p>
		<%= f.label :commenter %></p><br>
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body %></p><br>
		<%= f.text_area :body %>
	</p>
	<p>
	<%= f.submit %>
	</p>
<% end %>


<%= link_to 'Edit', edit_article_path(@article) %> |
